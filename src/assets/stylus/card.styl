.Card
    background-color white
    border-radius 4px
    border 1px solid transparent
    height auto
    overflow hidden
    transition .2s all ease-in
    width 100%
    &.Card--hover
        &:hover
            box-shadow 0 2px 5px 0 rgba(0,0,0,.26)
            transition .2s all ease-in
    &:hover
        border 1px solid #f4f5f5
    &__Image
        height 300px
        width 100%
        img
            height 100%
            width 100%
    &__Content
        display block
        overflow hidden
        padding 15px
        &__Title
            font-weight 700
        &__Price
            margin-top 15px
    &__Actions
        border-top 1px solid #eee
        display block
        padding 15px
        width 100%